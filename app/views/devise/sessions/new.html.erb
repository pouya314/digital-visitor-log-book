<div class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form', :class => "form-signin"}) do |f| %>
    <h2 class="form-signin-heading text-center">Admin sign in</h2>
    
    <%= f.email_field :email, :class => "form-control", :placeholder => "Email address", :autofocus => true %>
    <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
