<!DOCTYPE html>
<html>
<head>
  <title>FS Digital Visitor Registry Book</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
  <!-- font awesome -->
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
  
</head>
<body>
  
  <div>
    <% if notice %>
      <div id="notice" class="notice alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div id="alert" class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= alert %>
      </div>
    <% end %>
    
    <div class="panel panel-default" style="background-color:#d8d6d6;">
      <div class="panel-body text-left">
        <% if admin_signed_in? %>
            Currently siged in as <strong><%= current_admin.email %></strong> | <%= link_to "Sign out", destroy_admin_session_path, method: :delete %>
        <% end %>
      </div>
    </div>    
  </div>  

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <%= yield %>
      </div>
      
      <div class="col-md-4">
        <%= yield :filteringSection %>
      </div>
    </div>
  </div>

</body>
</html>
